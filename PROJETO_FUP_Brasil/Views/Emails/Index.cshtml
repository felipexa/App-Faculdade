@model IEnumerable<ForeignKey_Email.Email>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table  class="table roboto text-uppercase font-tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chefia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chefia.NomeChefia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.Cpf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Email" class="button-geral">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id_Email" class="button-geral">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id_Email" class="button-geral">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model PROJETO_FUP_Brasil.Models.Chefia

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center py-5">

        </div>
        <form asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 roboto">
                    <div class="form-group">
                        <h2 class="roboto mr-5">Gestor</h2>
                        <input asp-for="NomeChefia" class="form-control roboto" placeholder="GESTOR" />
                        <span asp-validation-for="NomeChefia" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 roboto">
                    <h2 class="roboto mr-5">Setor</h2>
                    <input asp-for="Setor" class="form-control roboto" placeholder="SETOR" />
                    <span asp-validation-for="Setor" class="text-danger"></span>
                </div>
                @*<div class="col-md-6 roboto mb-3">
                    <h2 class="roboto mr-5">ID</h2>
                    <input asp-for="FuncionarioId" class="form-control" placeholder="ID GESTOR" />
                    <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                </div>*@
                <div class="form-group text-center col-md-12 w-100">
                    <input type="submit" value="ADICIONAR GESTOR" class="btn-add w-50 rounded-pill" />
                    <a href="/Chefias">
                        <input class="roboto btn-voltar w-50 text-center rounded-pill mb-5" value="VOLTAR PARA O INICIO">
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

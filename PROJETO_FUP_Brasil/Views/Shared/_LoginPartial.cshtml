@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <span class="navbar-text text-white" >Olá, @User.Identity.Name!</span>
        </li>       
        <li class="nav-item">
            <a class="nav-link text-white "style="border:6px solid #000000; background:red" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut" > Sair</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-white" style="border:6px solid #000000; background:green" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Entrar</a>
        </li>
}
</ul>
